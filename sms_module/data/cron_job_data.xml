<odoo>
    <data noupdate="1">
        <record id="sms_generate_absent_records_cron" model="ir.cron">
            <field name="name">Generate Absent Records for Unassigned Students</field>
            <field name="model_id" ref="model_sms_module_attendance"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_absent_records()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).replace(hour=23, minute=59, second=0, microsecond=0).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
