<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--TODO[IMP]: course_view_form-->
    <record id="course_view_form" model="ir.ui.view">
        <field name="name">sms_module.course.form</field>
        <field name="model">sms_module.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <widget name="web_ribbon" title="Featured" bg_color="text-bg-success" invisible="is_featured != True" />
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="syllabus"/>
                        <field name="duration"/>
                        <field name="prerequisites"/>
                        <field name="is_featured"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!--TODO[IMP]: course_view_tree-->
    <record id="course_view_tree" model="ir.ui.view">
        <field name="name">sms_module.course.tree</field>
        <field name="model">sms_module.course</field>
        <field name="arch" type="xml">
            <tree string="Course">
                <field name="name"/>
                <field name="description"/>
                <field name="duration"/>
                <field name="is_featured"/>
            </tree>
        </field>
    </record>

    <!--TODO[IMP]: course_view_search-->
    <record id="course_view_search" model="ir.ui.view">
        <field name="name">sms_module.course.search</field>
        <field name="model">sms_module.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="duration"/>
            </search>
        </field>
    </record>

    <!--TODO[IMP]: course_action-->
    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">sms_module.course</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="course_view_tree"/>
        <field name="search_view_id" ref="course_view_search"/>
    </record>
    
</odoo>