<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--TODO[IMP]: attendance_view_form-->
    <record id="attendance_view_form" model="ir.ui.view">
        <field name="name">sms_module.attendance.form</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="attendance_date"/>
                        <field name="status"/>
                        <field name="is_present" widget="boolean_toggle" options="{'terminology': 'Present/Absent'}"/>
                        <field name="student_id" context="{'display_id': True}"/>
                        <field name="course_id"/>
                        <field name="absence_notes" invisible="status == 'present'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--TODO[IMP]: attendance_view_tree-->

    <record id="attendance_view_tree" model="ir.ui.view">
        <field name="name">sms_module.attendance.tree</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance" decoration-danger="status == 'absent'" decoration-success="status == 'present'">
                <field name="attendance_date"/>
                <field name="status"/>
                <field name="student_id"/>
                <field name="course_id"/>
                <field name="comments" optional="hide"/>
                <field name="class_name" optional="show"/>
                <field name="internal_notes" invisible="1"/>
            </tree>
        </field>
    </record>

    <!--TODO[IMP]: attendance_view_search-->
    <record id="attendance_view_search" model="ir.ui.view">
        <field name="name">sms_module.attendance.search</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="attendance_date"/>
                <field name="status"/>
                <field name="student_id"/>
                <field name="course_id"/>

                <filter string="Absent" name="status_absent" domain="[('status','=','absent')]"/>
                <filter string="Present" name="status_present" domain="[('status','=','present')]"/>

                <filter string="Today" name="date_today" domain="[('attendance_date','=',context_today())]"/>
                <filter string="Yesterday" name="date_yesterday" domain="[('attendance_date','=',(context_today() - relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last 4 Weeks" name="date_last_4_weeks" domain="[('attendance_date','&gt;=',(context_today() - relativedelta(weeks=4)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student" context="{'group_by':'student_id'}"/>
                    <filter string="Course" name="group_course" context="{'group_by':'course_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by':'attendance_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--TODO[IMP]: attendance_action-->
    <record id="attendance_action" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">sms_module.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="attendance_view_tree"/>
        <field name="search_view_id" ref="attendance_view_search"/>
        <field name="context">{'search_default_date_today': 1}</field>
    </record>

    <record id="update_attendance_status_server_action" model="ir.actions.server">
    <field name="name">Update Student Attendance Status</field>
    <field name="model_id" ref="model_sms_module_attendance"/>
    <field name="binding_model_id" ref="model_sms_module_attendance"/>
    <field name="state">code</field>
    <field name="code">env['sms_module.attendance'].update_student_attendance_status()</field>
</record>

</odoo>