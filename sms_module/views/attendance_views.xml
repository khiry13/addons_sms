<odoo>
    <record id="view_attendance_form" model="ir.ui.view">
        <field name="name">sms_module.attendance.form</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="attendance_date"/>
                        <field name="status"/>
                        <field name="student_id"/>
                        <field name="course_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_attendance_tree" model="ir.ui.view">
        <field name="name">sms_module.attendance.tree</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance">
                <field name="attendance_date"/>
                <field name="status"/>
                <field name="student_id"/>
                <field name="course_id"/>
            </tree>
        </field>
    </record>

    <record id="view_attendance_search" model="ir.ui.view">
        <field name="name">sms_module.attendance.search</field>
        <field name="model">sms_module.attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="attendance_date"/>
                <field name="status"/>
                <field name="student_id"/>
                <field name="course_id"/>
            </search>
        </field>
    </record>

    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">sms_module.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_attendance_tree"/>
        <field name="search_view_id" ref="view_attendance_search"/>
    </record>

</odoo>