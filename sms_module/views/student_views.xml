<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--TODO[IMP]: student_view_form-->
    <record id="student_view_form" model="ir.ui.view">
        <field name="name">sms_module.student.form</field>
        <field name="model">sms_module.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="open_url" string="Open URL" type="object"/>
                    <button name="action_trigger_students_age" type="object" string="Adult Students"/>
                    <button name="open_student_wizard" type="object" string="Select Interests" class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active" />
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="student_id" widget="CopyClipboardChar"/>
                            <field name="profile_link" widget="CopyClipboardURL"/>
                            <field name="gender" widget="radio"/>
                            <field name="course_level"/>
                            <field name="preferred_course_domain" invisible="True"/>
                            <field name="preferred_course_id" domain="preferred_course_domain"/>
                            <field name="contact_details"/>
                            <field name="address"/>
                            <field name="guardian_details"/>
                        </group>
                        <group>
                            <field name="age" />
                            <field name="priority_level" widget="priority"/>
                            <field name="attendance_percentage" widget="percentpie" />
                            <field name="enrollment_ids" widget="many2many_tags"/>
                            <field name="submit_evaluation" widget="boolean" />
                            <field name="mood_feedback" widget="char_emojis" />
                            <field name="national_doc"/>
                            <field name="image" widget="image"/>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Enrollments">
                            <field name="enrollment_ids">
                                <tree>
                                    <field name="course_id"/>
                                    <field name="enrollment_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!--TODO[IMP]: student_view_tree-->
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">sms_module.student.tree</field>
        <field name="model">sms_module.student</field>
        <field name="arch" type="xml">
            <tree string="Student">
                <header>
                    <button name="action_generate_attendance_today" type="object" string="Generate Attendance" class="oe_highlight"/>
                    <button name="action_trigger_students_age" type="object" string="Adult Students"/>
                </header>
                <field name="priority" widget="handle"/>
                <field name="display_name" />
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="student_id"/>
                <field name="priority_level" />
            </tree>
        </field>
    </record>

    <!--TODO[IMP]: student_view_pivot-->
    <record id="student_view_pivot" model="ir.ui.view">
    <field name="name">sms_module.student.pivot</field>
    <field name="model">sms_module.student</field>
    <field name="arch" type="xml">
        <pivot string="Student Analysis">
            <field name="attendance_percentage" type="measure"/>
<!--            <field name="enrollment_count" type="measure"/>-->
<!--            <field name="course_id" type="col"/>-->
<!--            <field name="grade_level_id" type="row"/>-->
<!--            <field name="attendance_status" type="row"/>-->
            <field name="student_id" type="row"/>
            <field name="date_of_birth" type="row"/>
        </pivot>
    </field>
</record>

    <!--TODO[IMP]: student_view_search-->
    <record id="student_view_search" model="ir.ui.view">
        <field name="name">sms_module.student.search</field>
        <field name="model">sms_module.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="student_id"/>
            </search>
        </field>
    </record>

    <!--TODO[IMP]: student_action-->
    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">sms_module.student</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="view_id" ref="student_view_tree"/>
        <field name="search_view_id" ref="student_view_search"/>
        <field name="context">{'display_id': True}</field>
    </record>
</odoo>