<odoo>
    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">sms_module.enrollment.form</field>
        <field name="model">sms_module.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment">
                <sheet>
                    <group>
                        <field name="enrollment_date"/>
                        <field name="student_id"/>
                        <field name="course_id"/>
                        <field name="state" widget="statusbar" options="{'clickable': 1}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_enrollment_tree" model="ir.ui.view">
        <field name="name">sms_module.enrollment.tree</field>
        <field name="model">sms_module.enrollment</field>
        <field name="arch" type="xml">
            <tree string="Enrollment">
                <field name="enrollment_date"/>
                <field name="student_id"/>
                <field name="course_id"/>
            </tree>
        </field>
    </record>

    <record id="view_enrollment_search" model="ir.ui.view">
        <field name="name">sms_module.enrollment.search</field>
        <field name="model">sms_module.enrollment</field>
        <field name="arch" type="xml">
            <search>
                <field name="enrollment_date"/>
                <field name="student_id"/>
                <field name="course_id"/>
            </search>
        </field>
    </record>

    <record id="action_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">sms_module.enrollment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_enrollment_tree"/>
        <field name="search_view_id" ref="view_enrollment_search"/>
    </record>

</odoo>