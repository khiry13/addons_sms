<odoo>
    <data noupdate="1">
        <record id="enrollment_teacher_rule" model="ir.rule">
            <field name="name">Teacher: Restrict Enrollment Records to Assigned Teacher</field>
            <field name="model_id" ref="sms_module.model_sms_module_enrollment"/>
            <field name="groups" eval="[(4, ref('sms_module.group_sms_teacher'))]"/>
            <field name="domain_force">[('teacher_id', '=', user.id)]</field>
        </record>
        <record id="attendance_teacher_rule" model="ir.rule">
            <field name="name">Teacher: Restrict Attendance Records to Assigned Teacher</field>
            <field name="model_id" ref="sms_module.model_sms_module_attendance"/>
            <field name="groups" eval="[(4, ref('sms_module.group_sms_teacher'))]"/>
            <field name="domain_force">[('teacher_id', '=', user.id)]</field>
        </record>
    </data>
</odoo>
